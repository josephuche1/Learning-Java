 * Task: A simple program to convert gallons to liters*/
public class GalToLit {

	public static void main(String[] args) {
        double gallons;
        double liters;
        gallons = 25;
        liters = gallons * 3.7854;
        System.out.println(gallons + " gallons is "+liters+" liters.");
	}

}
